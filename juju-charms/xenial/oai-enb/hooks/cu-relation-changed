# file cu-relation-changed
# brief manage the config changes of oai-enb service, and occurs everytime a new configuration value is updated (juju set)
# author navid.nikaein@eurecom.fr 

set -eux
source $CHARM_DIR/utils/common
set_env
status-set maintenance "cu-relation-changed hook"
#node_func=`config-get node_function`
#if [ "$node_func" == "cu" ] || [ "$node_func" == "CU" ] ; then

    DUIP=`relation-get DUIP`
    DUIF=`relation-get DUIF`
    DUPORTC=`relation-get DUPORTC`
    DUPORTD=`relation-get DUPORTD`
    
    if [ -z "$DUIP" ]; then
	juju-log "DU IP addr not yet available"
	exit 0
    fi
    if [ -z "$DUIF" ]; then
	juju-log "DU IF name not yet available"
	exit 0
    fi
    if [ -z "$DUPORTC" ]; then
	juju-log "DU PORTC not yet available"
	exit 0
    fi
    if [ -z "$DUPORTD" ]; then
	juju-log "DU PORTD not yet available"
	exit 0
    fi
    
    cu_ip_addr=`unit-get public-address`
    #cu_iface_name=`config-get cu_if_name`
    cu_iface_name="none"
    if [ "$cu_iface_name" == "none" ] ; then
        for interface in $(ls /sys/class/net); do
            if [ `ifconfig $interface | egrep -o "inet addr:[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+" | egrep -o "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+"` != "" ]; then
                ip_addr=`ifconfig $interface | egrep -o "inet addr:[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+" | egrep -o "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+"`
                if [ "$ip_addr" == $cu_ip_addr ] ; then
                    cu_iface_name=$interface
                    break
                fi
            fi
        done
    fi
    #cu_ip_addr=`ifconfig $(config-get cu_if_name) | egrep -o "inet addr:[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+" | egrep -o "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+"`
    enable_cu_f1 $cu_iface_name $cu_ip_addr $DUIP `config-get cu_portc` $DUPORTC `config-get cu_portd` $DUPORTD
    #enable_cu_f1 `config-get cu_if_name` $cu_ip_addr $DUIP `config-get cu_portc` $DUPORTC `config-get cu_portd` $DUPORTD
    #enable_cu_f1 `config-get cu_if_name` `config-get cu_ip_addr` $DUIP `config-get cu_portc` $DUPORTC `config-get cu_portd` $DUPORTD
    
    juju-log "CU config done"
#fi 