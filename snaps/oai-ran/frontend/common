#!/bin/sh
export DEBIAN_FRONTEND=noninteractive
set -e

CONF_DIR="$SNAP_DATA"

ENB_DIR="$SNAP/enb"
ENB_CONF_FILE="$CONF_DIR/enb.band7.tm1.50PRB.usrpb210.conf"
ENB_SIM_CONF_FILE="$CONF_DIR/rcc.band7.tm1.if4p5.50PRB.lo.conf"
ENB_EXEC="$ENB_DIR/$SNAP_NAME"

GNB_DIR="$SNAP/gnb"
GNB_CONF_FILE="$CONF_DIR/gnb.band78.tm1.106PRB.usrpn300.conf"
GNB_EXEC="$GNB_DIR/oai-nr"

CUDU_DIR="$SNAP/enb"
CUDU_CONF_FILE="$CONF_DIR/rcc.band7.tm1.if4p5.50PRB.conf"
CU_CONF_FILE="$CONF_DIR/cu.lte.conf"
DU_CONF_FILE="$CONF_DIR/du.lte.band7.10MHz.if4p5.conf"
CUDU_EXEC="$ENB_DIR/$SNAP_NAME"

L2SIM_CONF_FILE="rcc.band7.tm1.50PRB.nfapi.conf"

#use the same dir as cudu, but keep variables separated
RRU_DIR="$SNAP/enb"
RRU_CONF_FILE="$CONF_DIR/rru.conf"
RRU_EXEC="$ENB_DIR/$SNAP_NAME"

LTEM_DIR="$SNAP/enb"
LTEM_CONF_FILE="$CONF_DIR/enb.band13.tm1.50PRB.emtc.conf"
LTEM_EXEC="$ENB_DIR/$SNAP_NAME"
