#!/bin/sh

. $SNAP/common

case "$1" in
    "set" )
	CONFIG_FILE=$2
	if [ -f $(dirname $(readlink -f $0))/$CONFIG_FILE ]; then
	    CONFIG_FILE=$(dirname $(readlink -f $0))/$CONFIG_FILE
	    echo "Setting the default config file to: $CONFIG_FILE"
	else
	    # may be absolute path 
	    if [ -f "$CONFIG_FILE" ]; then
		# $CONFIG_FILE already exist in the $SNAP_DATA
		if [ -f $SNAP_DATA/$(basename $CONFIG_FILE) ] ; then 
		    echo "Reset the config file to: $SNAP_DATA/$(basename $CONFIG_FILE)"
		else 
		    #echo "$SNAP_DATA/$CONFIG_FILE"
		    cp $CONFIG_FILE $SNAP_DATA/
		    echo "Adding and setting a new config file : $SNAP_DATA/$(basename $CONFIG_FILE)"
		fi
		CONFIG_FILE=$SNAP_DATA/$(basename $CONFIG_FILE)
	    else
		echo "Config file <$CONFIG_FILE> not found in $SNAP/current directory"
		echo "Reset to default config file: $DEFAULT_CONF_FILE"
		CONFIG_FILE=$RAN_CONFIG_FILE
	    fi
	fi
	echo "RAN_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config.sh
	echo "RANCONF_FILE2=$CONFIG_FILE"  > $SNAP_USER_DATA/config.sh
	;;
    
    "ls" )
		$1 $RAN_DIR/*.conf
	;;

	*)
	if [ -r $SNAP_DATA/config.sh ]; then
	    . $SNAP_DATA/config.sh
	fi
	
	# default config file is (unless set in above config)
	RAN_CONFIG=${RAN_CONF_FILE2:-$RAN_CONF_FILE}
	# echo (get), cat (show)
	$1 $RAN_CONFIG
	;;
esac

#cat >$SNAP_USER_DATA/config.sh <<EOF
#CONFIG=$CONFIG_FILE
#EOF
    

