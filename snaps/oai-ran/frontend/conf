#!/bin/sh

. $SNAP/common

case "$1" in
    "set-enb" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a  -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $ENB_CONF_FILE"
	    CONFIG_FILE=$ENB_CONF_FILE
	fi

	echo "ENB_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_enb.sh
	echo "ENB_CONF_FILE2=$CONFIG_FILE"  > $SNAP_USER_DATA/config_enb.sh
	;;

    "set-cudu" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a  -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $CUDU_CONF_FILE"
	    CONFIG_FILE=$CUDU_CONF_FILE
	fi

	echo "CUDU_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_cudu.sh
	echo "CUDU_CONF_FILE2=$CONFIG_FILE"  > $SNAP_USER_DATA/config_cudu.sh
	;;

    "set-rru" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a  -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $RRU_CONF_FILE"
	    CONFIG_FILE=$RRU_CONF_FILE
	fi

	echo "RRU_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_rru.sh
	echo "RRU_CONF_FILE2=$CONFIG_FILE"  > $SNAP_USER_DATA/config_rru.sh
	;;
    
    "ls-enb" )
	if [ -r $SNAP_DATA/config_enb.sh ]; then
	    . $SNAP_DATA/config_enb.sh
	fi
	
	# default config file is (unless set in above config)
	ENB_CONFIG=${ENB_CONF_FILE2:-$ENB_CONF_FILE}
	ls $(dirname $ENB_CONFIG)/enb*.conf
	
	;;
    
    "ls-cudu" )
	if [ -r $SNAP_DATA/config_cudu.sh ]; then
	    . $SNAP_DATA/config_cudu.sh
	fi
	
	# default config file is (unless set in above config)
	CUDU_CONFIG=${CUDU_CONF_FILE2:-$CUDU_CONF_FILE}
	ls $(dirname $CUDU_CONFIG)/r*.conf
	;;

    
    "ls-rru" )
	if [ -r $SNAP_DATA/config_rru.sh ]; then
	    . $SNAP_DATA/config_rru.sh
	fi
	
	# default config file is (unless set in above config)
	RRU_CONFIG=${RRU_CONF_FILE2:-$RRU_CONF_FILE}
	ls $(dirname $RRU_CONFIG)/rru*.conf
	;;

    
    "echo-enb" | "cat-enb" )
	
	if [ -r $SNAP_DATA/config_enb.sh ]; then
	    . $SNAP_DATA/config_enb.sh
	fi
	
	# default config file is (unless set in above config)
	ENB_CONFIG=${ENB_CONF_FILE2:-$ENB_CONF_FILE}
	# echo (get), cat (show)
        `echo $1 | cut -d"-" -f1` $ENB_CONFIG
	;;

     "echo-cudu" | "cat-cudu" )
	
	if [ -r $SNAP_DATA/config_cudu.sh ]; then
	    . $SNAP_DATA/config_cudu.sh
	fi
	
	# default config file is (unless set in above config)
	CUDU_CONFIG=${CUDU_CONF_FILE2:-$CUDU_CONF_FILE}
	# echo (get), cat (show)
        `echo $1 | cut -d"-" -f1` $CUDU_CONFIG
	;;
      
     "echo-rru" | "cat-rru" )
	
	if [ -r $SNAP_DATA/config_rru.sh ]; then
	    . $SNAP_DATA/config_rru.sh
	fi
	
	# default config file is (unless set in above config)
	RRU_CONFIG=${RRU_CONF_FILE2:-$RRU_CONF_FILE}
	# echo (get), cat (show)
        `echo $1 | cut -d"-" -f1` $RRU_CONFIG
	;;

     *)
	 echo "unknown command $1"
	 
	;;
esac

#cat >$SNAP_USER_DATA/config.sh <<EOF
#CONFIG=$CONFIG_FILE
#EOF
    

