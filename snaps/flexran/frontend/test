# file test
# brief test scripts and variables for flexran Snap
# author Navid Nikaein (navid.nikaein@eurecom.fr, navid.nikaein@mosaic-5g.io)


. $SNAP/common
. $SNAP/util

waiting_time=1
check_string="Listening on "$(snapctl get conf.naddr)":"$(snapctl get conf.nbi) 
conf=$(snapctl get conf.log) 
d="d"

if_sudo
snap_isconnected log-observe
#snap_isconnected network-control
snap_isconnected process-control


case "$1" in
    "api" )

    ;;
    
    "flexran")
	
	$SNAP/run status-all
	sleep $waiting_time 
	echo_info "Start $1$d"
	$SNAP/run start "$1$d" 
	sleep $waiting_time
	echo_info "Stop $1$d"
	$SNAP/run stop "$1$d"
	sleep $waiting_time
	$SNAP/run status-all
	
	sleep $waiting_time 
	$SNAP/run status-all
	sleep $waiting_time 
	
	echo_info "Stop All"
	$SNAP/run stop-all
	sleep $waiting_time

	echo ""
	echo_info "Check and set $1 conf"
	$SNAP/conf sbi 1234
	$SNAP/conf nbi 4321
	$SNAP/conf naddr "10.0.1.1"
	$SNAP/conf set-log $conf
	
	echo ""
	echo_info "Init"
	$SNAP/init $1

	echo ""
	echo_info "Start OpenAPI"
	$SNAP/run start apid
	#echo "curl -Is localhost:$(snapctl get conf.apiport)"
	#curl -Is localhost:$(snapctl get conf.apiport) | head -n 1
	$SNAP/run journal apid -e -n20 |  egrep -i "Starting Open API|Starting OpenAPI" > /dev/null 2>&1
	
	if [ $? -eq 0 ] ; then
	    echo_success "apid test: passed"
	else
	    echo_error   "apid test: failed"
	fi
    
	echo ""
	echo_info "Snap Info"
	$SNAP/run info

	echo ""
	echo_info "Check $1 exec"
	$SNAP/run journal $1$d -e -n10 | grep "$check_string" > /dev/null 2>&1
	if [ $? -eq 0 ] ; then
	    echo_success "$1 Exec: passed"
	else
	    echo_error   "$1 exec: failed"
	fi
	
	;;

   
esac

	
