#!/bin/sh
set -e 
echo "Configure hook "
if [ -n "$LD_LIBRARY_PATH" ]; then
    LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$SNAP/lib:$SNAP/usr/lib:$SNAP/usr/local/lib:$SNAP/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH
else
    echo "LD_LIBRARY_PATH=$SNAP/..."
    LD_LIBRARY_PATH=$SNAP/lib:$SNAP/usr/lib:$SNAP/usr/local/lib:$SNAP/usr/local/lib/freeDiameter:$SNAP/usr/lib/x86_64-linux-gnu:$SNAP/usr/lib/gcc/x86_64-linux-gnu/5.4.0/
fi
export LD_LIBRARY_PATH

snapctl stop --disable ${SNAP_NAME}  2>&1  || true

$SNAP/init
