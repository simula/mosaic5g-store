#!/bin/sh

. $SNAP/common

case "$1" in
    "set-mme" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $MME_CONF_FILE"
	    CONFIG_FILE=$MME_CONF_FILE
	fi

	echo "MME_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_mme.sh
	echo "MME_CONF_FILE2=$CONFIG_FILE" > $SNAP_USER_DATA/config_mme.sh
	;;

    "set-spgw" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $SPGW_CONF_FILE"
	    CONFIG_FILE=$SPGW_CONF_FILE
	fi

	echo "SPGW_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_spgw.sh
	echo "SPGW_CONF_FILE2=$CONFIG_FILE" > $SNAP_USER_DATA/config_spgw.sh
	;;

    "set-hss" )
	CONFIG_FILE=$2
	if [ "$CONFIG_FILE" != "${CONFIG_FILE#/}" -a -f "$CONFIG_FILE" ]; then
	    echo "Setting the default config file to: $CONFIG_FILE"
	    
	elif [ -f "$CONF_DIR/$CONFIG_FILE" ]; then
	    CONFIG_FILE=$CONF_DIR/$CONFIG_FILE
	    echo "Config file found in the $CONF_DIR!"
	    echo "Resetting to the default config file: $CONFIG_FILE"

	else
	    echo "[ERR] Config file $CONFIG_FILE not found, please provide an absolute path!"
	    echo "Reset to default config file: $HSS_CONF_FILE"
	    CONFIG_FILE=$HSS_CONF_FILE
	fi

	echo "HSS_CONF_FILE2=$CONFIG_FILE" > $SNAP_DATA/config_hss.sh
	echo "HSS_CONF_FILE2=$CONFIG_FILE" > $SNAP_USER_DATA/config_hss.sh
	;;
    
     "ls-mme" )
	if [ -r $SNAP_DATA/config_mme.sh ]; then
	    . $SNAP_DATA/config_mme.sh
	fi
	
	# default config file is (unless set in above config)
	MME_CONFIG=${MME_CONF_FILE2:-$MME_CONF_FILE}
	ls $(dirname $MME_CONFIG)/mme*.conf
	;;
     "ls-spgw" )
        if [ -r $SNAP_DATA/config_spgw.sh ]; then
	    . $SNAP_DATA/config_spgw.sh
	fi
	
	# default config file is (unless set in above config)
	SPGW_CONFIG=${SPGW_CONF_FILE2:-$SPGW_CONF_FILE}
	ls $(dirname $SPGW_CONFIG)/spgw*.conf
	;;
     "ls-hss" )
        if [ -r $SNAP_DATA/config_hss.sh ]; then
	    . $SNAP_DATA/config_hss.sh
	fi
	
	# default config file is (unless set in above config)
	HSS_CONFIG=${HSS_CONF_FILE2:-$HSS_CONF_FILE}
	ls $(dirname $HSS_CONFIG)/hss*.conf
	;;
     "echo-mme" | "cat-mme" )
	
	if [ -r $SNAP_DATA/config_mme.sh ]; then
	    . $SNAP_DATA/config_mme.sh
	fi
	
	# default config file is (unless set in above config)
	MME_CONFIG=${MME_CONF_FILE2:-$MME_CONF_FILE}
	# echo (get), cat (show)
        `echo $1 | cut -d"-" -f1` $MME_CONFIG
	;;
      "echo-spgw" | "cat-spgw" )
	
	if [ -r $SNAP_DATA/config_spgw.sh ]; then
	    . $SNAP_DATA/config_spgw.sh
	fi
	
	# default config file is (unless set in above config)
	SPGW_CONFIG=${SPGW_CONF_FILE2:-$SPGW_CONF_FILE}
	# echo (get), cat (show)
	`echo $1 | cut -d"-" -f1` $SPGW_CONFIG
	;;
      "echo-hss" | "cat-hss" )
	
	if [ -r $SNAP_DATA/config_hss.sh ]; then
	    . $SNAP_DATA/config_hss.sh
	fi
	
	# default config file is (unless set in above config)
	HSS_CONFIG=${HSS_CONF_FILE2:-$HSS_CONF_FILE}
	# echo (get), cat (show)
	`echo $1 | cut -d"-" -f1` $HSS_CONFIG
	;;
      *)
       echo "unknown command $1"
       ;;
esac
    

